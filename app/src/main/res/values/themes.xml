<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication">
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:color">@color/dark_blue</item>
    </style>

    <style name="BottomNavigationView.TextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">29sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>